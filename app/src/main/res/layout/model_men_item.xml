<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#FFFF"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

    <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp">

        <TextView
                android:id="@+id/menu_item_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/menu_item_price"
                android:layout_below="@id/menu_item_name"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/menu_item_category"
                android:layout_below="@id/menu_item_name"
                android:layout_toRightOf="@id/menu_item_price"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/menu_item_price"/>

        <TextView
                android:id="@+id/menu_item_description"
                android:layout_below="@id/menu_item_price"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>